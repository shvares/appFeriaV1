<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".events.Febentos"
    android:background="@drawable/cultura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80000000"
        android:id="@+id/titulo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Eventos Culturales"
            android:layout_gravity="center"
            android:textSize="47dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/espacio"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@+id/titulo"
        android:orientation="horizontal"
        android:background="#80000000">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80000000"
        android:layout_below="@+id/espacio"
        android:id="@+id/suti">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Listado de Eventos culturales"
         android:textSize="30dp"
         android:textColor="#FFFFFF"
         android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/suti"
        android:orientation="vertical"
        android:background="#80000000">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="Click para ver >"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:id="@+id/btncultura"/>
    </LinearLayout>


</RelativeLayout>